/* miniprogram/pages/unlock/unlock.wxss */
#car {
    width: 600rpx;
    margin-left: 75rpx;
    height: 300rpx;
    background: pink;
    margin-top: 50rpx;
}

#car image {
    width: 100%;
    height: 100%;
}

#car .description {
    padding-top: 20rpx;
    letter-spacing: 2rpx;
    text-align: center;
    color: blue;
}

#car .setting {
    margin-top: 50rpx;
    display: flex;
    align-items: center;
    justify-content: center;
}

.head_photo {
    height: 100%;
    width: 100%;
}

.permission_description {
    color: blue;
    padding-top: 30rpx;
    text-align: center;
}

.scan {
    width: 600rpx;
    position: absolute;
    display: flex;
    align-items: center;
    justify-content: center;
    height: 70rpx;
    opacity: .7;
    margin-left: 75rpx;
    bottom: 200rpx;
    text-align: center;
    color: white;
}

.my-header {
    width: 100rpx;
    height: 100rpx;
}