/**index.wxss**/
.userinfo {
    display: flex;
    flex-direction: column;
    align-items: center;
    color: #aaa;
}

.userinfo-avatar {
    overflow: hidden;
    width: 128rpx;
    height: 128rpx;
    margin: 20rpx;
    border-radius: 50%;
}

.usermotto {
    margin-top: 200px;
}

page {
    height: 100%;
}

#mapId {
    width: 100%;
    height: 100%;
}

.image-size {
    font-size: 66rpx;
}

.scan {
    width: 600rpx;
    height: 75rpx;
    display: flex;
    color: white;
    align-items: center;
    justify-content: center;
    background: gray;
    position: absolute;
    bottom: 7%;
    left: 75rpx;
    opacity: .8;
}

.head_box {
    padding-top: 20rpx;
    padding-left: 20rpx;
    opacity: 0.9;
    display: flex;
    height: 200rpx;
    width: 100rpx;
    flex-direction: column;
    align-items: first;
    justify-content: space-between;
}